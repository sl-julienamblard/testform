{
	"compilerOptions": {
		"baseUrl": "./src",
		"downlevelIteration": true,
		"strict": false,
		"outDir": "./lib",
		"lib": ["ESNext"],
		"declaration": true,
		"emitDeclarationOnly": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"typeRoots": ["node_modules/@types"],
	"include": ["src"]
}
